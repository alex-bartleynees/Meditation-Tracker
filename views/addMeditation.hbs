{{>header}}

<div class="columns m-5">
  <div class="container is-max-widescreen">
    
    <form ref='uploadForm' 
      id='uploadForm' 
      action='/addMeditation' 
      method='post'>

       <div class="column">
        <div class="field">
          <div class="control">
            <label for="name" name="name" class="label is-large">
              User Name:
              <input class="input is-link is-rounded spacing is-large" type="text" name="name" placeholder="Enter User Name" value="">
            </label>
          </div>
        </div>
      </div>
     

      <div class="column">
        <div class="field">
          <div class="control">
            <label for="meditation" name="meditation" class="label is-large">
              Type of Meditation:
              <input class="input is-link is-rounded spacing is-large" type="text" name="meditation" placeholder="Enter Meditation" value="">
            </label>
          </div>
        </div>
      </div>

        <div class="column">
        <div class="field">
          <div class="control">
            <label for="time" name="time" class="label is-large">
              Time:
              <input class="input is-link is-rounded spacing is-large" type="text" name="time" placeholder="Enter Number" value="">
            </label>
          </div>
        </div>
      </div>


        <div class="column">
        <div class="field">
          <div class="control">
            <label for="date" name="date" class="label is-large">
              Date:
              <input class="input is-link is-rounded spacing is-large" type="text" name="date" placeholder="Enter Date" value="">
            </label>
          </div>
        </div>
      </div>



      <div class="column has-text-centered">
        <div class="field">
          <div class="control">
            <button class="button is-link">Submit</button>
          </div>
        </div>


    </form>
  </div>
</div>
