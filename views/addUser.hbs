{{>header}}

<div class="columns m-5">
  <div class="container is-max-widescreen">
    
    <form ref='uploadForm' 
      id='uploadForm' 
      action='/addUser' 
      method='post'>
     

      <div class="column">
        <div class="field">
          <div class="control">
            <label for="userName" name="userName" class="label is-large">
              User Name:
              <input class="input is-link is-rounded spacing is-large" type="text" name="userName" value="">
            </label>
          </div>
        </div>
      </div>


      <div class="column has-text-centered">
        <div class="field">
          <div class="control">
            <button class="button is-link">Submit</button>
          </div>
        </div>


    </form>
  </div>
</div>
